{
  "clearMocks": true,
  "collectCoverage": false,
  "testEnvironment": "node",
  "testTimeout": 600000,
  "verbose": true,
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  }
}
